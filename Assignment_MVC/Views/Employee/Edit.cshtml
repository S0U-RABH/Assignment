@model Employee


<div class="card-body p-4">
    <form method="post" class="row">
        <input hidden asp-for="EmpID"/>
        <div class=" border p-3 row">
            <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div>
            <div class=" py-2 col-md-4">
                <label asp-for="FirstName" class="ms-2"></label>
                <input asp-for="FirstName" class="form-control " placeholder="Enter FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="LastName" class="ms-2"></label>
                <input asp-for="LastName" class="form-control  " placeholder="Enter LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="Company" class="ms-2"></label>
                <input asp-for="Company" class="form-control  " placeholder="Enter Company Name" />
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="Designation" class="ms-2"></label>
                <input asp-for="Designation" class="form-control  " placeholder="Enter Designation" />
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="Degree" class="ms-2"></label>
                <input asp-for="Degree" class="form-control  " placeholder="Enter Degree" />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="Department" class="ms-2"></label>
                <input asp-for="Department" class="form-control  " placeholder="Enter Department" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="Hostel" class="ms-2"></label>
                <input asp-for="Hostel" class="form-control  " placeholder="Enter Hostel" />
                <span asp-validation-for="Hostel" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="Gender" class="ms-2"></label>
                <input asp-for="Gender" class="form-control  " placeholder="Enter Gender" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="Country" class="ms-2"></label>
                <input asp-for="Country" class="form-control  " placeholder="Enter Country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="City" class="ms-2"></label>
                <input asp-for="City" class="form-control  " placeholder="Enter City" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="py-2 col-md-4">
                <label asp-for="ShirtSize" class="ms-2">T-Shirt Size</label>
                <input asp-for="ShirtSize" class="form-control  " placeholder="Enter ShirtSize" />
                <span asp-validation-for="ShirtSize" class="text-danger"></span>
            </div>


        </div>
        <div class="row mt-3">
            <div class="col-2 col-md-1">
                <button type="submit" class="btn btn-success form-control">Save</button>
            </div>
            <div class="col-2 col-md-1">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-danger border form-control">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}